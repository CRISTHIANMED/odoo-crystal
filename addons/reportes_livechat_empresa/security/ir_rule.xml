<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Regla para im_livechat.report.channel -->
    <record id="rule_report_channel_by_company" model="ir.rule">
        <field name="name">Ver reportes de canal solo de mi empresa</field>
        <field name="model_id" ref="im_livechat.model_im_livechat_report_channel"/>
        <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Regla para im_livechat.report.operator -->
    <record id="rule_report_operator_by_company" model="ir.rule">
        <field name="name">Ver reportes de operadores solo de mi empresa</field>
        <field name="model_id" ref="im_livechat.model_im_livechat_report_operator"/>
        <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
